<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Components design  -->
    <!--  Typography  -->
    <style name="ys_bold">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:fontWeight">700</item>
        <item name="android:letterSpacing">@dimen/ys_typography_letterSpacing</item>
    </style>
    <style name="ys_bold_32" parent="ys_bold">
        <item name="android:textSize">32sp</item>
    </style>
    <style name="ys_bold_24" parent="ys_bold">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ys_medium">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">400</item>
        <item name="android:letterSpacing">@dimen/ys_typography_letterSpacing</item>
    </style>
    <style name="ys_medium_22" parent="ys_medium">
        <item name="android:textSize">22sp</item>
    </style>
    <style name="ys_medium_19" parent="ys_medium">
        <item name="android:textSize">19sp</item>
    </style>
    <style name="ys_medium_16" parent="ys_medium">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ys_medium_14" parent="ys_medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ys_regular">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:letterSpacing">@dimen/ys_typography_letterSpacing</item>
    </style>
    <style name="ys_regular_18" parent="ys_regular">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="ys_regular_16" parent="ys_regular">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ys_regular_14" parent="ys_regular">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="ys_regular_13" parent="ys_regular">
        <item name="android:textSize">13sp</item>
    </style>
    <style name="ys_regular_12" parent="ys_regular">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="ys_regular_11" parent="ys_regular">
        <item name="android:textSize">11sp</item>
    </style>

    <!--  Panel Header  -->
    <style name="PanelHeader.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
        <item name="titleTextAppearance">@style/ys_medium_22</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="titleMarginStart">12dp</item>
        <item name="titleMarginTop">14dp</item>
    </style>

    <!-- Lists -->
    <!-- Base Item Style -->
    <style name="BaseItem.Lists.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:paddingStart">13dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <!-- Base Icon Style -->
    <style name="BaseIcon.Lists.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_weight">45</item>
    </style>

    <!-- Base Title Style -->
    <style name="BaseTitle.Lists.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">19dp</item>
        <item name="android:textAppearance">@style/ys_regular_16</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Base Subtitle Style -->
    <style name="BaseSubtitle.Lists.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">13dp</item>
        <item name="android:textAppearance">@style/ys_regular_11</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Base Secondary Icon -->
    <style name="BaseSecondaryIcon.Lists.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_weight">24</item>
        <item name="android:layout_gravity">center_vertical|end</item>
    </style>

    <!-- Line and Icon -->
    <style name="LineAndIcon.Lists.PlaylistMaker" parent="BaseItem.Lists.PlaylistMaker">
        <item name="android:paddingStart">16dp</item>
        <item name="android:textAppearance">@style/ys_regular_16</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Two Lines, Image and Icon -->
    <style name="TwoLinesImageAndIcon.Lists.PlaylistMaker" parent="BaseItem.Lists.PlaylistMaker">
        <item name="android:paddingVertical">8dp</item>
    </style>

    <!-- One Line -->
    <style name="OneLine.Lists.PlaylistMaker" parent="BaseItem.Lists.PlaylistMaker">
        <item name="android:textAppearance">@style/ys_medium_19</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Search Field -->
    <style name="SearchField.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/search_bar_background</item>
        <!-- Behaviour -->
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionDone</item>
        <!-- Icon -->
        <item name="android:drawableStart">@drawable/ic_search_bar</item>
        <item name="android:drawablePadding">8dp</item>
        <!-- Text -->
        <item name="android:textAppearance">@style/ys_regular_16</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textColorHint">@color/Elements.SearchField.PlaylistMaker</item>
        <item name="android:hint">@string/search_screen_search_bar_hint</item>
        <item name="android:textCursorDrawable">@drawable/search_bar_cursor</item>
    </style>

    <style name="ClearButton.SearchField.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:visibility">gone</item>
    </style>
    
    <!-- Buttons -->
    <!-- Small Button -->
    <style name="SmallButton.Buttons.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/small_button_background</item>
        <item name="android:textAppearance">@style/ys_medium_14</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <!-- Big Button -->
    <style name="BigButton.Buttons.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:layout_width">328dp</item>
        <item name="android:layout_height">220dp</item>
        <item name="backgroundTint">@color/yp_white</item>
        <item name="android:background">@drawable/big_button_background</item>
        <item name="android:textAppearance">@style/ys_medium_22</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconEndPadding">8dp</item>
        <item name="iconTint">@color/yp_black</item>
    </style>

    <!-- Specific Styles -->
    <!-- Search Screen -->
    <style name="Title.TrackHistory.SearchScreen.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:textAppearance">@style/ys_medium_19</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Audio Player Screen -->
    <style name="PrimaryButton.AudioPlayerScreen.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@drawable/background_primary_button</item>
        <item name="android:backgroundTint">@null</item>
    </style>

    <style name="SecondaryButton.AudioPlayerScreen.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:layout_width">51dp</item>
        <item name="android:layout_height">51dp</item>
        <item name="android:background">@drawable/background_secondary_button</item>
        <item name="android:backgroundTint">@color/BackgroundTint.SecondaryButton.AudioPlayerScreen.PlaylistMaker</item>
    </style>

    <style name="TrackName.AudioPlayerScreen.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:textAppearance">@style/ys_medium_22</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SecondaryText.AudioPlayerScreen.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:textAppearance">@style/ys_medium_14</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>