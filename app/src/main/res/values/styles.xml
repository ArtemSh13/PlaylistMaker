<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Components design  -->
    <!--  Typography  -->
    <style name="ys_bold">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:fontWeight">700</item>
        <item name="android:letterSpacing">@dimen/ys_typography_letterSpacing</item>
    </style>
    <style name="ys_bold_32" parent="ys_bold">
        <item name="android:textSize">32sp</item>
    </style>
    <style name="ys_bold_24" parent="ys_bold">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ys_medium">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">400</item>
        <item name="android:letterSpacing">@dimen/ys_typography_letterSpacing</item>
    </style>
    <style name="ys_medium_22" parent="ys_medium">
        <item name="android:textSize">22sp</item>
    </style>
    <style name="ys_medium_19" parent="ys_medium">
        <item name="android:textSize">19sp</item>
    </style>
    <style name="ys_medium_16" parent="ys_medium">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ys_medium_14" parent="ys_medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ys_regular">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:letterSpacing">@dimen/ys_typography_letterSpacing</item>
    </style>
    <style name="ys_regular_18" parent="ys_regular">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="ys_regular_16" parent="ys_regular">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ys_regular_14" parent="ys_regular">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="ys_regular_13" parent="ys_regular">
        <item name="android:textSize">13sp</item>
    </style>
    <style name="ys_regular_12" parent="ys_regular">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="ys_regular_11" parent="ys_regular">
        <item name="android:textSize">11sp</item>
    </style>

    <!--  Panel Header  -->
    <style name="PanelHeader.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="titleTextAppearance">@style/ys_medium_22</item>
        <item name="titleMarginStart">12dp</item>
        <item name="titleMarginTop">14dp</item>
    </style>
    
    <!-- Buttons -->
    <!-- Small Button -->
    <style name="SmallButton.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/small_button_background</item>
        <item name="android:textAppearance">@style/ys_medium_14</item>
        <item name="android:textColor">@color/yp_white</item>
    </style>

    <!-- Big Button -->
    <style name="BigButton.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:layout_width">328dp</item>
        <item name="android:layout_height">220dp</item>
        <item name="backgroundTint">@color/yp_white</item>
        <item name="android:background">@drawable/big_button_background</item>
        <item name="android:textAppearance">@style/ys_medium_22</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconEndPadding">8dp</item>
        <item name="iconTint">@color/yp_black</item>
    </style>

    <!-- Specific Styles -->
    <!-- Search Screen -->
    <!-- Search Bar -->
    <style name="SearchBar.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/search_bar_background</item>
        <!-- Behaviour -->
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionDone</item>
        <!-- Icon -->
        <item name="android:drawableStart">@drawable/ic_search_bar</item>
        <item name="android:drawablePadding">8dp</item>
        <!-- Text -->
        <item name="android:textAppearance">@style/ys_regular_16</item>
        <item name="android:textColorHint">@color/yp_text_gray</item>
        <item name="android:hint">@string/search_screen_search_bar_hint</item>
        <item name="android:textCursorDrawable">@drawable/search_bar_cursor</item>
    </style>

    <style name="ClearButton.SearchBar.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:visibility">gone</item>
    </style>
    
    <style name="Title.TrackHistory.SearchScreen.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:textAppearance">@style/ys_medium_19</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Not refactored styles -->
    <style name="settings_screen_item">
        <item name="android:layout_height">@dimen/settings_screen_item_layout_height</item>
        <item name="android:textColor">@color/settings_screen_item_text_color</item>
    </style>

    <style name="search_screen_track_item_track_name">
        <item name="android:textSize">@dimen/search_screen_track_item_track_name_textSize</item>
        <item name="android:textColor">@color/search_screen_track_item_track_name_color</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">@integer/search_screen_track_item_track_name_textFontWeight</item>
    </style>

    <style name="search_screen_track_item_track_desc">
        <item name="android:textSize">@dimen/search_screen_track_item_track_sub_desc_textSize</item>
        <item name="android:textColor">@color/search_screen_track_item_track_sub_desc_color</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">@integer/search_screen_track_item_track_sub_desc_textFontWeight</item>
    </style>

    <style name="search_screen_stub_text">
        <item name="android:textSize">@dimen/search_screen_stub_text_textSize</item>
        <item name="android:textColor">@color/search_screen_stub_fill_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">@integer/search_screen_stub_text_textFontWeight</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="search_screen_stub_update_button">
        <item name="android:textSize">@dimen/search_screen_stub_update_button_textSize</item>
        <item name="android:textColor">@color/search_screen_stub_button_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">@dimen/search_screen_stub_update_button_letterSpacing</item>
        <item name="android:textFontWeight">@integer/search_screen_stub_update_button_textFontWeight</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">@dimen/search_screen_stub_update_button_padding</item>
    </style>
</resources>