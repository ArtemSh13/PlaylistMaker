<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_screen_title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/main_screen_title_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="main_screen_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/main_screen_button_color</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/main_screen_button_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="search_screen_title">
        <item name="android:textColor">@color/search_screen_title_color</item>
        <item name="android:textSize">@dimen/search_screen_title_textSize</item>
    </style>

    <style name="search_screen_search_bar">
        <item name="android:background">@drawable/search_bar_style</item>
        <item name="android:drawableStart">@drawable/ic_search_bar</item>
        <item name="android:drawablePadding">@dimen/search_screen_search_bar_drawablePadding</item>
        <item name="android:hint">@string/search_screen_search_bar_hint</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/search_screen_search_bar_textColorHint</item>
        <item name="android:textSize">@dimen/search_screen_search_bar_textSize</item>
        <item name="android:textCursorDrawable">@drawable/search_bar_cursor</item>
    </style>

    <style name="search_screen_search_bar_clear_button">
        <item name="android:layout_width">@dimen/search_screen_clear_search_bar_button_layout_width</item>
        <item name="android:layout_height">@dimen/search_screen_clear_search_bar_button_layout_height</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="settings_screen_title">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="settings_screen_item">
        <item name="android:layout_height">@dimen/settings_screen_item_layout_height</item>
        <item name="android:textColor">@color/settings_screen_item_text_color</item>
    </style>

    <style name="search_screen_track_item_track_name">
        <item name="android:textSize">@dimen/search_screen_track_item_track_name_textSize</item>
        <item name="android:textColor">@color/search_screen_track_item_track_name_color</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">@integer/search_screen_track_item_track_name_textFontWeight</item>
    </style>

    <style name="search_screen_track_item_track_desc">
        <item name="android:textSize">@dimen/search_screen_track_item_track_sub_desc_textSize</item>
        <item name="android:textColor">@color/search_screen_track_item_track_sub_desc_color</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">@integer/search_screen_track_item_track_sub_desc_textFontWeight</item>
    </style>

    <style name="search_screen_stub_text">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#1A1B22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>