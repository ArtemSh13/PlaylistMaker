<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_screen_background_color"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_weight="7">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_marginTop="14dp"
            android:text="@string/main_screen_title"
            style="@style/main_screen_title" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="93"
        android:orientation="vertical">

        <Button
            android:id="@+id/search_button"
            android:layout_width="@dimen/main_screen_button_layout_width"
            android:layout_height="@dimen/main_screen_button_layout_height"
            android:layout_weight="@dimen/main_screen_button_layout_weight"
            android:layout_marginHorizontal="@dimen/main_screen_button_layout_marginHorizontal"
            android:layout_marginVertical="@dimen/main_screen_button_layout_marginVertical"
            android:layout_gravity="center_horizontal"
            style="@style/main_screen_button"
            android:text="@string/main_screen_button_search"
            app:cornerRadius="@dimen/main_screen_button_cornerRadius"
            app:icon="@drawable/ic_light_mode_inactive_search"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/main_screen_button_iconPadding"
            app:iconTint="@color/main_screen_button_text_color" />

        <Button
            android:id="@+id/library_button"
            android:layout_width="@dimen/main_screen_button_layout_width"
            android:layout_height="@dimen/main_screen_button_layout_height"
            android:layout_weight="@dimen/main_screen_button_layout_weight"
            android:layout_marginHorizontal="@dimen/main_screen_button_layout_marginHorizontal"
            android:layout_marginVertical="@dimen/main_screen_button_layout_marginVertical"
            android:layout_gravity="center_horizontal"
            style="@style/main_screen_button"
            android:text="@string/main_screen_button_library"
            app:cornerRadius="@dimen/main_screen_button_cornerRadius"
            app:icon="@drawable/ic_light_mode_inactive_library"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/main_screen_button_iconPadding"
            app:iconTint="@color/main_screen_button_text_color" />

        <Button
            android:id="@+id/settings_button"
            android:layout_width="@dimen/main_screen_button_layout_width"
            android:layout_height="@dimen/main_screen_button_layout_height"
            android:layout_weight="@dimen/main_screen_button_layout_weight"
            android:layout_marginHorizontal="@dimen/main_screen_button_layout_marginHorizontal"
            android:layout_marginVertical="@dimen/main_screen_button_layout_marginVertical"
            android:layout_gravity="center_horizontal"
            style="@style/main_screen_button"
            android:text="@string/main_screen_button_settings"
            app:cornerRadius="@dimen/main_screen_button_cornerRadius"
            app:icon="@drawable/ic_light_mode_inactive_settings"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/main_screen_button_iconPadding"
            app:iconTint="@color/main_screen_button_text_color" />
    </LinearLayout>
</LinearLayout>