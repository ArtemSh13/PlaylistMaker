<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_screen_background_color"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/main_toolbar"
        style="@style/PanelHeader.PlaylistMaker"
        app:title="@string/main_screen_title"
        app:titleTextColor="@color/yp_white"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />
    
    <Button
        android:id="@+id/search_button"
        android:text="@string/main_screen_button_search"
        app:icon="@drawable/ic_inactive_search"
        android:layout_gravity="center"
        style="@style/BigButton.Buttons.PlaylistMaker" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />
    <Button
        android:id="@+id/library_button"
        android:text="@string/main_screen_button_library"
        app:icon="@drawable/ic_inactive_library"
        android:layout_gravity="center"
        style="@style/BigButton.Buttons.PlaylistMaker" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />
    <Button
        android:id="@+id/settings_button"
        android:text="@string/main_screen_button_settings"
        app:icon="@drawable/ic_inactive_settings"
        android:layout_gravity="center"
        style="@style/BigButton.Buttons.PlaylistMaker" />
</LinearLayout>