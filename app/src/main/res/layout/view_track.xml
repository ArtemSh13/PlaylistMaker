<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_screen_track_item_general_height"
    android:orientation="horizontal"
    android:layout_marginStart="@dimen/search_screen_track_item_general_margin_start"
    android:layout_marginEnd="@dimen/search_screen_track_item_general_margin_end" >
    <ImageView
        android:id="@+id/track_artwork"
        android:layout_width="@dimen/search_screen_track_item_track_artwork_layout_width"
        android:layout_weight="@dimen/search_screen_track_item_track_artwork_layout_weight"
        android:layout_height="@dimen/search_screen_track_item_track_artwork_layout_height"
        android:layout_margin="@dimen/search_screen_track_item_track_artwork_layout_margin"
        android:src="@mipmap/ic_launcher" />
    <LinearLayout
        android:layout_width="@dimen/search_screen_track_item_track_desc_layout_width"
        android:layout_weight="@dimen/search_screen_track_item_track_desc_layout_weight"
        android:layout_height="@dimen/search_screen_track_item_track_desc_layout_height"
        android:orientation="vertical"
        android:layout_marginVertical="@dimen/search_screen_track_item_track_desc_layout_marginVertical" >
        <TextView
            android:id="@+id/track_name"
            style="@style/search_screen_track_item_track_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/search_screen_track_item_track_name_layout_height"
            android:layout_marginBottom="@dimen/search_screen_track_item_track_name_layout_marginBottom" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/search_screen_track_item_track_sub_desc_layout_height"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/artist_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/search_screen_track_item_track_desc" />
            <ImageView
                android:layout_width="@dimen/search_screen_track_item_track_sub_desc_middot_size"
                android:layout_height="@dimen/search_screen_track_item_track_sub_desc_middot_size"
                android:src="@drawable/ic_middot"
                android:layout_margin="@dimen/search_screen_track_item_track_time_layout_margin" />
            <TextView
                android:id="@+id/track_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/search_screen_track_item_track_desc" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:src="@drawable/ic_arrow_forward"
        android:layout_width="@dimen/search_screen_track_item_arrow_layout_width"
        android:layout_weight="@dimen/search_screen_track_item_arrow_layout_weight"
        android:layout_height="@dimen/search_screen_track_item_arrow_layout_height"
        android:layout_margin="@dimen/search_screen_track_item_arrow_layout_margin"
        android:layout_gravity="end|center_vertical" />
</LinearLayout>