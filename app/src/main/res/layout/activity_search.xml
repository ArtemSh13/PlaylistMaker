<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/search_screen_background_color"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/search_toolbar"
        style="@style/ys_toolbar"
        app:title="@string/search_screen_title" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="16dp" >

        <EditText
            android:id="@+id/search_bar"
            style="@style/SearchBar.PlaylistMaker"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/clear_search_bar_button"
            style="@style/ClearButton.SearchBar.PlaylistMaker"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="14dp"
            android:src="@drawable/ic_clear_button"
            tools:visibility="visible"/>
    </FrameLayout>
    
    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_screen_space_between_bar_n_track_list" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/track_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/search_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_screen_search_history_title_layout_height"
            android:text="@string/search_screen_search_history_title" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_history_track_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/clear_tracks_history_button"
            android:layout_width="@dimen/search_screen_clear_search_history_button_layout_width"
            android:layout_height="@dimen/search_screen_clear_search_history_button_layout_height"
            android:text="@string/search_screen_clear_search_history_button_label" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/stub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >
        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_screen_space_between_bar_n_stub" />
        <ImageView
            android:id="@+id/stub_image"
            android:layout_width="@dimen/search_screen_stub_image_size"
            android:layout_height="@dimen/search_screen_stub_image_size"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/stub_primary_text"
            android:layout_width="@dimen/search_screen_stub_text_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/search_screen_stub_text_layout_marginBottom"
            style="@style/search_screen_stub_text" />
        <TextView
            android:id="@+id/stub_secondary_text"
            android:layout_width="@dimen/search_screen_stub_text_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/search_screen_stub_text_layout_marginBottom"
            style="@style/search_screen_stub_text" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/search_screen_stub_update_button"
            android:layout_width="@dimen/search_screen_stub_update_button_layout_width"
            android:layout_height="@dimen/search_screen_stub_update_button_layout_height"
            android:background="@drawable/search_screen_stub_update_button"
            android:text="@string/search_screen_stub_update_button_text"
            android:visibility="gone"
            style="@style/search_screen_stub_update_button" />
    </LinearLayout>

</LinearLayout>