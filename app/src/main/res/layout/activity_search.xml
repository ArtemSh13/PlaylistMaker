<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/search_screen_background_color"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/search_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_screen_title_layout_height"
        android:layout_marginStart="@dimen/search_screen_title_layout_marginStart"
        android:layout_marginBottom="@dimen/search_screen_title_layout_marginBottom"
        app:title="@string/search_screen_title"
        app:titleMarginStart="@dimen/search_screen_title_text_layout_marginStart"
        app:titleMarginTop="@dimen/search_screen_title_text_layout_marginTop"
        app:titleTextAppearance="@style/search_screen_title"
        app:titleTextColor="@color/search_screen_title_color" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/search_bar"
            style="@style/search_screen_search_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_screen_search_bar_layout_height"
            android:layout_marginHorizontal="@dimen/search_screen_search_bar_layout_marginHorizontal"
            android:imeOptions="actionDone"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/clear_search_bar_button"
            style="@style/search_screen_search_bar_clear_button"
            android:layout_gravity="end"
            android:layout_marginHorizontal="@dimen/search_screen_clear_search_bar_button_layout_marginHorizontal"
            android:layout_marginVertical="@dimen/search_screen_clear_search_bar_button_layout_marginVertical"
            android:src="@drawable/ic_clear_button" />
    </FrameLayout>
    
    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_screen_space_between_bar_n_track_list" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/track_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>