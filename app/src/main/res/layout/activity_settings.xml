<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_screen_background_color"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settings_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_marginTop="14dp"
            android:text="@string/settings_screen_title"
            android:textColor="@color/settings_screen_title_color"
            android:textSize="22sp" />
    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:layout_width="@dimen/settings_screen_item_layout_width"
        android:layout_height="@dimen/settings_screen_item_layout_height"
        android:text="@string/settings_screen_item_dark_theme"
        android:layout_marginStart="@dimen/settings_screen_item_layout_marginStart"
        android:layout_marginEnd="@dimen/settings_screen_item_layout_marginEnd"
        android:textColor="@color/settings_screen_item_text_color"
        app:thumbTint="@color/settings_screen_item_switch_thumbTint_color"
        app:trackTint="@color/settings_screen_item_switch_trackTint_color"  />

    <TextView
        android:id="@+id/share"
        android:layout_width="@dimen/settings_screen_item_layout_width"
        android:layout_height="@dimen/settings_screen_item_layout_height"
        android:layout_marginStart="@dimen/settings_screen_item_layout_marginStart"
        android:layout_marginEnd="@dimen/settings_screen_item_layout_marginEnd"
        android:gravity="center_vertical"
        android:textColor="@color/settings_screen_item_text_color"
        android:drawableEnd="@drawable/ic_light_mode_share"
        android:text="@string/settings_screen_item_share" />

    <TextView
        android:id="@+id/support"
        android:layout_width="@dimen/settings_screen_item_layout_width"
        android:layout_height="@dimen/settings_screen_item_layout_height"
        android:layout_marginStart="@dimen/settings_screen_item_layout_marginStart"
        android:layout_marginEnd="@dimen/settings_screen_item_layout_marginEnd"
        android:gravity="center_vertical"
        android:textColor="@color/settings_screen_item_text_color"
        android:drawableEnd="@drawable/ic_light_mode_support"
        android:text="@string/settings_screen_item_support" />

    <TextView
        android:layout_width="@dimen/settings_screen_item_layout_width"
        android:layout_height="@dimen/settings_screen_item_layout_height"
        android:layout_marginStart="@dimen/settings_screen_item_layout_marginStart"
        android:layout_marginEnd="@dimen/settings_screen_item_layout_marginEnd"
        android:gravity="center_vertical"
        android:textColor="@color/settings_screen_item_text_color"
        android:drawableEnd="@drawable/ic_light_mode_arrow_forward"
        android:text="@string/settings_screen_item_user_agreement"
        android:layout_marginBottom="476dp"/>

</LinearLayout>